{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for Read the Docs configuration file",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "basics": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
	      "version":{
		      "description":"The version of the spec to be use",
		      "type":"string",
		      "enum":["2"]
	      },
	      "formats":{
		      "anyof":[
			      {"type":"array",
			      "items":{
				      "type":"string",
				      "enum":["htmlzip","epub","pdf"]

			      } },
			      {
				      "type":"string",
				      "enum":["all"]
			      
			      }
		      ]



	      },
	      "conda":{
		     "include":"conda"
		     
	      },
	      "build":{
		      "include":"build"
	      },
	      "python":{
	      "include":"python"
	      },
	      "sphinx":{
		      "include":"sphinx"
	      },
	      "mkdocs":{
		      "include":"mkdocs"
	      },
	      "submodules":{
		      "include":"mkdocs"
	      },
	      "redirects":{
		      "mapInt":
		      {
			      "type":"string",
			      "enum":["page"],
			      
			      "mapInt":
			      {
				      
			      }


		      } 
	      },
	      "conda":
	      {
		      "enviroment":"path()"
	      },
	      "build":
	      {
		      "image":
		      {
			      "type":"string",
			      "enum":["stable","latest"]
		      }
	      },
	      "python":
	      {
		      "version":
		      {
			      "type":"string",
			      "enum":["2","2.7","3","3.3","3.4","3.5","3.6"]
		      },
		      "system_packages":
		      {
			      "type":"boolean"
		      },
		      "install":
		      {
			      "type":"array",
			      "items":
			      {
				      "anyof":
				      [
					      "include":"python-install-requirements",
					      "include":"python-install",
					      "include":"python-install-pipfile"
				      ]

			      }

		      }

	      },
	      "python-install-requirements":
	      {
		      "requirements":"path()"

	      },
	      "python-install":
	      {
		      "path":"path()",
		      "method":
		      {
			      "type":"string",
			      "enum":["pip","setuptools"]
		      },
		      "extra_requirements":
		      {
			      "type":"array",
			      "items":
			      {
				      "type":"string"

			      }
		      }

	      },
	      "python-install-pipfile":
	      {
		      "pipfile":"path()",
		      "dev":
		      {
			      "type":"boolean"
		      },
		      "ignore_pipfile":
		      {
			      "type":"boolean"
		      },
		      "skip_lock":
		      {
			      "type":"boolean"
		      }
	      }
	      "sphinx":
	      {
		      "bulider":
		      {
			      "type":"string",
			      "enum":["html","htmldir","singlehtml"]


		      },
		      "configuration":"path()",
		      "fail_on_warning":"boolean"

	      },
	      "mkdocs":
	      {
		      "configuration":"path()",
		      "fail_on_warning":"boolean",
		      "submodules":
		      {
			      "include":
			      {
				      "anyof":
				      [
					      "type":"array",
					      "items":
					      {
						     "type":"string",
						     "enum":["all"]
					      }
				      ]
			      },
			      "exclude":
			      {
				      "anyof":
                                      [
                                              "type":"array",
                                              "items":
                                              {
                                                     "type":"string",
                                                     "enum":["all"]
                                              }
                                      ]
			      },
			      "recursive":
			      {
				      "type":"boolean"
			      }
		      }

	      }



      }
    }
  }
}

